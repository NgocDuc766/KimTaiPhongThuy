    <link rel="stylesheet" type="text/css" href="fonts/icomoon.css">
    <link rel="stylesheet" type="text/css" href="/css/vendor.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600;700&family=Poiret+One&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="secondary-nav border-top border-bottom">
            <div class="container-fluid">
                <div class="row">
                    <div class="top-menu d-flex flex-wrap justify-content-between">
                        <div class="left-block d-flex flex-wrap list-unstyled justify-content-start">
                            @* search bar nằm bên trái header*@
                            <li class="menu-item">
                                <form class="searchbar">
                                    <input type="text" name="search" placeholder="Search Here..">
                                    <i class="icon icon-search"></i>
                                </form>
                            </li>
                        </div>
                        <div class="right-block d-flex flex-wrap justify-content-center">
                            <div class="main-logo">
                                <a href="index.html">
                                    <img src="images/logo-kimtaiphongthuy.png" alt="logo" style="height:70px; width:300px">
                                </a>
                            </div>
                        </div>
                            @*menu bên phải header: login/logout....*@
                        <ul class="right-block d-flex flex-wrap list-unstyled justify-content-end">                            <li class="menu-item">
                            <li class="menu-item">
                                <a href="/Authentication/Account">
                                    <i class="icon icon-user"></i>Login
                                </a>
                            </li>
                        </ul>

                    </div>
                </div>
            </div>
        </nav>
        <nav class="secondary-nav">
            <div class="container-fluid">
                <div class="row d-flex flex-wrap justify-content-center">
                    <div class="col-md-8 col-sm-10">
                        <div class="navbar d-flex">
                            <div class="main-menu stellarnav desktop light">
                                <ul class="menu-list list-unstyled">
                                    <li class="menu-item">
                                        <a href="/index" class="text-uppercase item-anchor">Trang chủ</a>
                                    </li>
                                    <li class="menu-item">
                                        <a href="/chat" class="text-uppercase item-anchor">Tư vấn nhanh</a>
                                    </li>
                                    <li class="menu-item">
                                        <a href="/Products/ProductList" class="text-uppercase item-anchor">Sản phẩm</a>
                                    </li>
                                    <li class="menu-item">
                                        <a href="#" class="text-uppercase item-anchor">Blog</a>
                                    </li>
                                    <li class="menu-item">
                                        <a href="blog.html" class="text-uppercase item-anchor">Về chúng tôi</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="hamburger">
                                <span class="bar"></span>
                                <span class="bar"></span>
                                <span class="bar"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

