@page
@model KimTaiPhongThuy.Pages.Admin.UserListModel

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: darkred;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    .no-access {
        text-align: center;
        padding: 50px;
        font-size: 24px;
        color: #555;
    }
</style>

@if (HttpContext.Session.GetInt32("RoleId") == 1)
{
    <h1>Danh sách người dùng</h1>
    <p>Tổng số người dùng: @Model.TotalUserCount</p>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên người dùng</th>
                <th>Tên liên hệ</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Ngày sinh</th>
                <th>Số điện thoại</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.ContactName</td>
                    <td>@user.Email</td>
                    <td>@user.Address</td>
                    <td>@user.DateOfBirth.ToString("dd/MM/yyyy")</td>
                    <td>@user.PhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="no-access">
        <h1>404 NOT FOUND</h1>
    </div>
}